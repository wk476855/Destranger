<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.destranger.start.register">

    <RelativeLayout
        android:id="@+id/un"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!--<TextView
            android:text="用户名:"
            android:textSize="25sp"
            android:layout_below="@+id/head"
            android:layout_toLeftOf="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/username"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />-->
        <com.android.destranger.view.MyEditText
            android:id="@+id/username"
            android:hint="例如：张三"
            android:paddingLeft="100dp"
            android:layout_toLeftOf="@+id/head"
            android:layout_alignBottom="@+id/head"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/head"
            android:src="@mipmap/head"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/pw"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/un"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!--<TextView
            android:text="密    码:"
            android:textSize="25sp"
            android:layout_below="@+id/head"
            android:layout_toLeftOf="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/password"
            android:layout_width="150dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />-->
        <com.android.destranger.view.MyEditText
            android:id="@+id/password"
            android:hint="设置您的密码"
            android:paddingLeft="100dp"
            android:inputType="textPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/s"
        android:layout_below="@+id/pw"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!--<TextView
            android:text="性    别:"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:id="@+id/gender"
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/boy"
                android:textSize="25sp"
                android:text="男"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/girl"
                android:text="女"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>-->
        <com.android.destranger.view.MyEditText
            android:id="@+id/sex"
            android:hint="选择您的性别"
            android:editable="false"
            android:paddingLeft="100dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/register"
        android:layout_below="@+id/s"
        android:layout_marginTop="10dp"
        android:text="@string/register"
        android:textSize="20sp"
        android:focusable="true"
        android:background="@drawable/regbutton_selector"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
